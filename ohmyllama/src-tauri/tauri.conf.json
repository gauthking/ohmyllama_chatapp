{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ohmyllama",
  "version": "0.1.0",
  "identifier": "com.ohmyllama.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "width": 1920,
        "height": 1080,
        "maxWidth": 1920,
        "maxHeight": 1080,
        "resizable": true,
        "decorations": true,
        "maximizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
